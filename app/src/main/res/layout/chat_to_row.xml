<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_photo_to_chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/message_to_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxWidth="220dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext_regist_login"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageview_photo_to_chat"
            app:layout_constraintTop_toTopOf="@+id/imageview_photo_to_chat"/>
</android.support.constraint.ConstraintLayout>