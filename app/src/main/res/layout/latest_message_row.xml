<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:id="@+id/circleImageView" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Djon Snouw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_textview_latest_message"
            app:layout_constraintTop_toTopOf="@+id/circleImageView"
            app:layout_constraintStart_toEndOf="@+id/circleImageView"
            android:layout_marginStart="20dp" android:textSize="16sp" android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    <TextView
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/messages_textview_latest_message"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@+id/username_textview_latest_message"
            app:layout_constraintStart_toStartOf="@+id/username_textview_latest_message"
            app:layout_constraintEnd_toStartOf="@+id/date_textview_latest_message"
            android:layout_marginEnd="50dp" android:textSize="14sp"/>
    <TextView
            android:text="Mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_textview_latest_message"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:textSize="16sp" android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

</android.support.constraint.ConstraintLayout>