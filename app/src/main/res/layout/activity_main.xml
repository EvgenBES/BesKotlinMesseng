<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/holo_green_light">


    <EditText
            android:id="@+id/login_editText_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Login"
            android:background="@drawable/rounded_edittext_regist_login"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:paddingStart="15dp"/>
    <EditText
            android:id="@+id/email_editText_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Email"
            android:background="@drawable/rounded_edittext_regist_login"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/login_editText_main"
            app:layout_constraintEnd_toEndOf="@+id/login_editText_main"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/login_editText_main"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" android:paddingStart="15dp"/>
    <EditText
            android:id="@+id/password_editText_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:background="@drawable/rounded_edittext_regist_login"
            android:ems="10"
            app:layout_constraintStart_toStartOf="@+id/email_editText_main"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/email_editText_main"
            app:layout_constraintEnd_toEndOf="@+id/email_editText_main"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="15dp"/>
    <Button
            android:id="@+id/button_main"
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/password_editText_main"
            app:layout_constraintEnd_toEndOf="@+id/password_editText_main"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/password_editText_main"
            android:background="@drawable/rounded_buttom_regist_login"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    <TextView
            android:id="@+id/account_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/button_main"
            app:layout_constraintEnd_toEndOf="@+id/button_main"
            app:layout_constraintTop_toBottomOf="@+id/button_main"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Alredy have an account?"
            android:textColor="@android:color/background_light"/>
</android.support.constraint.ConstraintLayout>